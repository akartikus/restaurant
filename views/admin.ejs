    <body>
        <div class="jumbotron text-center">
            <p>AMU - M2P SIR - Sitraka RAZAFIMAMY</p>
            <h1>Page d'administration "Plan de salle"</h1>
            <p>Bonjour <%= username %>! <button class="btn btn-info" id="logout"> <span class="glyphicon glyphicon-off"></span> Se déconnecter</button></p> 
        </div>        
        <div class="container">
            <div class="row">
                <div class="panel panel-default">
                    <div class="panel-heading">Gestion des utilisateurs</div>
                    <div class="panel-body">
                        <div class="col-sm-6">
                            <h3>Employés : </h3> 
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Nom</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody id="users"></tbody>
                            </table>       
                            <form>
                                <h3>Ajout employé : </h3> 
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                                    <input id="username" class="form-control" type="text" placeholder="Nom d'utilisateur" required>
                                </div>
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                                    <input id="password" class="form-control" type="password" placeholder="Mot de passe" required>
                                </div>
                                <div class="input-group">
                                    <input id="createuser" class="btn btn-primary" type="submit" class="btn btn-default" value="Créer l'employé">
                                </div>
                            </form>
                            <div id="results"></div>
                        </div>
                    </div>
                </div>
            </div>
 
